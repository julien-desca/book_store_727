<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}My book store{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href={{ asset('css/bootstrap.css')}} />
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">

            <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('list_category') }}>Cat√©gories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('list_author') }}>Auteur(e)s</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('list_book') }}>Livres</a>
                        </li>
                        
                        {% if is_granted("ROLE_ADMIN") %}
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('register_admin') }}>Nouveau compte admin</a>
                        </li>
                        {% endif %}


                        <li class="nav-item">
                            {% if is_granted("ROLE_USER") %}
                                <a class="nav-link" href={{ path('app_logout') }}>Logout</a>
                            {% else %}
                                <a class="nav-link" href={{ path('app_login') }}>Login</a>
                            {% endif %}
                        </li>
                    </ul>
            </nav>
            
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
